{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% if form.vars.value.id %}
    {% oro_title_set({params : {"%channel.name%": form.vars.value.name } }) %}
{% endif %}
{% set formAction = form.vars.value.id ? path('oro_integration_channel_update', { id: form.vars.value.id }) : path('oro_integration_channel_create') %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('oro_integration_channel_delete') %}
        {{
            UI.deleteButton({
                'dataUrl': path('oro_api_delete_channel', {'id': form.vars.value.id}),
                'dataRedirect': path('oro_integration_channel_index'),
                'aCss': 'no-hash remove-button',
                'id': 'btn-remove-channel',
                'dataId': form.vars.value.id,
                'dataMessage': 'Are you sure you want to delete this channel?'|trans,
                'successMessage': 'Channel deleted'|trans,
                'title': 'Delete Group',
                'label': 'Delete'
            })
        }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.button({'path' : path('oro_integration_channel_index'), 'title' : 'Cancel', 'label' : 'Cancel'}) }}
    {{ UI.saveAndStayButton('orocrm_contact_group_update') }}
    {{ UI.saveAndCloseButton() }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set title = 'Create Channel'|trans %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('oro_integration_channel_index'),
            'indexLabel': 'Channel',
            'entityTitle': form.vars.value.name|default('N/A')
            }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'channel' %}

    {% set dataBlocks = [{
        'title': 'General',
        'class': 'active',
        'subblocks': [
            {
                'title': 'Basic Information',
                'data':  [ form_widget(form) ]
            }
        ]
        }]
    %}
    {% set data = {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks,
        }
    %}
    {{ parent() }}
{% endblock content_data %}
