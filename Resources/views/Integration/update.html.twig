{% extends 'OroUIBundle:actions:update.html.twig' %}

{% form_theme form with ['OroIntegrationBundle:Form:fields.html.twig'] %}

{% set entity = form.vars.value %}
{% set formAction = entity.id ? path('oro_integration_update', { id: entity.id }) : path('oro_integration_create') %}

{% if entity.id %}
    {% oro_title_set({params : {"%integration.name%": entity.name } }) %}
{% endif %}

{% block navButtons %}
    {% if entity.id and resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_integration', {'id': entity.id}),
            'dataRedirect': path('oro_integration_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-channel',
            'dataId': entity.id,
            'entity_label': 'oro.integration.integration.entity_label'|trans,
            'dataMessage': 'oro.integration.delete_sync_integration.content',
            'successMessage': 'oro.integration.delete_sync_integration.success'
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}

    {{ UI.cancelButton(path('oro_integration_index')) }}
    {% if entity.id %}
        {{ UI.clientButton({
            'dataUrl': path('oro_integration_schedule', { 'id': entity.id }) ,
            'aCss':   'no-hash schedule-button btn-primary',
            'label' : 'Schedule sync'|trans
        }) }}
    {% endif %}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('oro_integration_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('oro_integration_index'),
            'indexLabel':  'oro.integration.integration.entity_plural_label'|trans,
            'entityTitle': entity.name|default('N/A')
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'oro.integration.integration.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title }%}
    {% endif %}
{% endblock pageHeader %}

{% block stats %}{% endblock %}

{% block content_data %}
    {% set id = 'channel-update' %}
    {% set dataBlocks = [] %}

    {% if (form.synchronizationSettings is defined and form.synchronizationSettings.count) %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Synchronization Settings'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data':  [form_widget(form.synchronizationSettings)]
            }]
        }]) %}
    {% endif %}

    {% if (form.mappingSettings is defined and form.mappingSettings.count) %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Mapping Settings'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data':  [form_widget(form.synchronizationSettings)]
            }]
        }]) %}
    {% endif %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': 'Basic Information'|trans,
            'data':  [form_widget(form)]
        }]
    }]|merge(dataBlocks) %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
    <script type="text/javascript">
        require(['jquery', 'orotranslation/js/translator', 'routing', 'oroui/js/messenger', 'oronavigation/js/navigation'],
        function ($, __, routing, messenger, Navigation) {
            $(function () {
                $('.schedule-button').click(function (e) {
                    e.preventDefault();

                    var url = $(this).data('url');

                    var navigation = Navigation.getInstance();
                    if (navigation) {
                        navigation.loadingMask.show();
                    }

                    $.ajax(url, {
                        success: function (res) {
                            messenger.notificationMessage('success', res.message);
                            if (navigation) {
                                navigation.processClicks($('.job-view-link'));
                            }
                        },
                        error: function () {
                            messenger.notificationMessage('error', __('oro.integration.error'));
                        },
                        dataType: 'json'
                    }).always(function () {
                        if (navigation) {
                            navigation.loadingMask.hide();
                        }
                    });
                });
            });
        });
    </script>
{% endblock content_data %}
